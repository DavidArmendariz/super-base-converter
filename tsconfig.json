{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                     
    "declaration": true,                   
    "outDir": "./build",                   
    "strict": true,                         
    "esModuleInterop": true,                 
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts"]
}
